{
  "exclude": "(^test/)",
  "linters": {
    "spelling": {
      "type": "spelling"
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "json": {
      "type": "json",
      "include": "(\\.json$)"
    },
    "cppcheck": {
      "type": "cppcheck",
      "include": "(\\.(cpp|h|cxx|hpp)$)",
      "flags": ["--language=c++", "--std=c++11"]
    }
  }
}
